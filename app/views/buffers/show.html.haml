%span= link_to "Back to Buffers", buffers_path
%span= @buffer.name

%p
  = link_to "|<< First", "?page=0", class: "first_page"
  = link_to_if @prevpage, "<< Back", "?page=#{@prevpage}", class: "prev_page"
  = link_to_if @nextpage, "Forward >>", "?page=#{@nextpage}", class: "next_page"
  = link_to "Last >>|", "?page=-1", class: "last_page"

- if @lines.empty?
  %ul
    %h4 Nothing here!

- else

  %h3= @lines.first.nicedate
  %table.lines
    = render @lines

